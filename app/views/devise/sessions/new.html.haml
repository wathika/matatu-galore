.login-bg
  .container
    .row
      .col-md-4.col-md-offset-4
        .log-in.panel
          .panel-heading
            %h2 Log in
            = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
              .form-inputs
                .form-group
                  = f.input :login, required: false, autofocus: true, label: false do
                    = f.input_field :login, class: "form-control input-lg", placeholder: "User Name or Email"
                .form-group
                  = f.input :password, required: false, label: false do
                    = f.input_field :password, class: "form-control input-lg", placeholder: "Password"
                .form-group
                  = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
              .form-actions
                = f.button :submit, "Log in", class: "btn-lg btn-info btn-block"
            = render "devise/shared/links"
