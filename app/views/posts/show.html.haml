.posts-wrapper.row
  .post
    .post-head
      .name
        = @post.user.username
    .image.center-block
      = image_tag @post.image.url(:medium), class: "img-responsive"
    %p.caption
      = @post.caption
    .text-center.edit-links
      = link_to "Cancel", posts_path
      |
      = link_to "Edit Post", edit_post_path(@post)
